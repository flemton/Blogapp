<h1>Add a Comment</h1>

<%= form_for @comment, url: post_comments_path(@post) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <%= form.hidden_field :post_id, value: @post.id %>
  <%= form.hidden_field :author, value: @current_user %>
  <%= form.submit "Add Comment" %>
<% end %>

<%= link_to 'Back to Post', user_post_path(@post.author, @post) %>