<div><img src="<%= @user.photo%>" alt="Photo">
    <div>
      <h4>Name: <%= link_to @user.name, user_path(@user) %></h4>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
</div>

<section>
  <% @posts.each do |post| %>
    <div>
      <h4><%= link_to post.title, user_post_path(post.author, post) %></h4>
      <p><%= post.content%><p>
      <p>comments: <%= post.comments_counter%>, likes: <%= post.likes_counter%> </p>
    </div>
    <div>
      <% post.comments.limit(5).each do |comment| %>
        <p><strong><%= comment.author.name %> : </strong><%= comment.content %></p>
      <% end %>
    </div>
  <% end %>
</section>