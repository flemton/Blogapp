<section class="all-users">
  <% @users.each do |user| %>
    <div class="user-container">
    <img src="<%= user.photo%>" alt="Photo">
     <%= link_to user_path(user) do %>
      <h3><%= user.name%></h3>
      <p>Number of posts: <%= user.posts_counter %></p>
    <% end %>
    </div>
  <% end %>
</section>